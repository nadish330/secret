    <h1>Enter your code to get permission to open:</h1>
    <input type="number" id="codeInput" placeholder="Enter code">
    <button onclick="checkCode()">Submit</button>
    <p id="message"></p>

    <script>
        function checkCode() {
            const code = document.getElementById('codeInput').value;
            const message = document.getElementById('message');
            if (code == "2025") {
                message.textContent = "WOWWWWWWWWWWWWWWWWWWWW";
            } else {
                message.textContent = "";
                alert("IKKAAAAAAAAA ONNOOOOOODE NOKK");
            }
        }
    </script>
